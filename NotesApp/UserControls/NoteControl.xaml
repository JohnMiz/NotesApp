<UserControl x:Class="NotesApp.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
          <TextBlock Name="titleTextBlock"
                     Text="{Binding Title}"
                     FontSize="15"
                     FontWeight="Bold"
                     />
         <TextBlock Name="editedTextBlock"
                     Text="{Binding CreatedTime.ToShortDateString()}"
                     FontSize="12"
                     Margin="0 10 0 0"
                     Foreground="DodgerBlue"
                     />
         <TextBlock Name="contentTextBlock"
                     Text="hello it me and my name is jonthatn im here to conqur the world."
                     FontSize="12"
                     Foreground="DarkGray"
                     TextWrapping="Wrap"
                     />
     </StackPanel>
</UserControl>
